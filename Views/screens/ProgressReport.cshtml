@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "Progress Report";
}

@section Styles {
    <link rel="stylesheet" href="~/css/progress-report.css" />
}

<div class="report-header">
    <h1 class="report-title">Learning Progress</h1>
    <p class="report-subtitle">Track your achievements and performance</p>
</div>

<!-- â”€â”€ Stats Overview â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
<div class="stats-grid">
    <div class="stat-card">
        <div class="stat-card-header">
            <span class="stat-label">Total Tests Passed</span>
            <div class="stat-card-icon" style="color: #10B981;">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M6 9H4.5a2.5 2.5 0 0 1 0-5H6"/><path d="M18 9h1.5a2.5 2.5 0 0 0 0-5H18"/><path d="M4 22h16"/><path d="M10 14.66V17c0 .55-.47.98-.97 1.21C7.85 18.75 7 20.24 7 22"/><path d="M14 14.66V17c0 .55.47.98.97 1.21C16.15 18.75 17 20.24 17 22"/><path d="M18 2H6v7a6 6 0 0 0 12 0V2Z"/></svg>
            </div>
        </div>
        <div class="stat-card-value">5</div>
    </div>

    <div class="stat-card">
        <div class="stat-card-header">
            <span class="stat-label">Current Level</span>
            <div class="stat-card-icon" style="color: #F59E0B;">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><circle cx="12" cy="12" r="6"/><circle cx="12" cy="12" r="2"/></svg>
            </div>
        </div>
        <div class="stat-card-value">Intermediate</div>
    </div>

    <div class="stat-card">
        <div class="stat-card-header">
            <span class="stat-label">Learning Streak</span>
            <div class="stat-card-icon" style="color: #6366F1;">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 12A10 10 0 1 1 12 2a10 10 0 0 1 10 10Z"/><path d="m16 10-4 4-2-2"/></svg>
            </div>
        </div>
        <div class="stat-card-value">12 days</div>
    </div>

    <div class="stat-card">
        <div class="stat-card-header">
            <span class="stat-label">Hours Learned</span>
            <div class="stat-card-icon" style="color: #3B82F6;">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="18" height="18" x="3" y="4" rx="2" ry="2"/><line x1="16" y1="2" x2="16" y2="6"/><line x1="8" y1="2" x2="8" y2="6"/><line x1="3" y1="10" x2="21" y2="10"/></svg>
            </div>
        </div>
        <div class="stat-card-value">48h</div>
    </div>
</div>

<div class="report-content-grid">
    
    <!-- â”€â”€ Left Column: Skill Paths â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
    <div class="skill-paths-section">
        <h2 class="section-title">Skill Path Progress</h2>
        
        <div class="skill-paths-container">
            <!-- SQL Developer Path -->
            <div class="skill-path-card">
                <div class="skill-path-top">
                    <div class="skill-path-info">
                        <h3 class="skill-path-title">SQL Developer</h3>
                        <p class="skill-path-desc">Master database management and SQL queries for backend development roles</p>
                    </div>
                    <div class="skill-path-image">
                        <img src="https://images.unsplash.com/photo-1544383835-bda2bc66a55d?q=80&w=200&auto=format&fit=crop" alt="SQL Developer" />
                    </div>
                </div>

                <div class="overall-progress-wrapper">
                    <div class="progress-info-row">
                        <span class="progress-info-label">Overall Progress</span>
                        <span class="progress-info-value">45%</span>
                    </div>
                    <div class="progress-bar-container">
                        <div class="progress-bar-chunk chunk-completed" style="width: 45%;"></div>
                        <div class="progress-bar-chunk chunk-in-progress" style="width: 20%;"></div>
                    </div>
                </div>

                <div class="levels-grid">
                    <div class="level-box level-beginner">
                        <span class="level-name">Beginner</span>
                        <span class="level-status">Completed</span>
                        <div class="level-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="#10B981" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"/></svg>
                        </div>
                    </div>
                    <div class="level-box level-intermediate">
                        <span class="level-name">Intermediate</span>
                        <span class="level-status">In Progress</span>
                        <span class="level-progress-val">65%</span>
                    </div>
                    <div class="level-box level-advanced">
                        <span class="level-name">Advanced</span>
                        <span class="level-status">Locked</span>
                        <div class="level-icon">
                            <svg xmlns="http://www.w3.org/2000/0_svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="#94A3B8" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="18" height="11" x="3" y="11" rx="2" ry="2"/><path d="M7 11V7a5 5 0 0 1 10 0v4"/></svg>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Frontend Developer Path -->
            <div class="skill-path-card">
                <div class="skill-path-top">
                    <div class="skill-path-info">
                        <h3 class="skill-path-title">Frontend Developer</h3>
                        <p class="skill-path-desc">Build modern web applications with HTML, CSS, JavaScript, and React</p>
                    </div>
                    <div class="skill-path-image">
                        <img src="https://images.unsplash.com/photo-1547658719-da2b51169166?q=80&w=200&auto=format&fit=crop" alt="Frontend Developer" />
                    </div>
                </div>

                <div class="overall-progress-wrapper">
                    <div class="progress-info-row">
                        <span class="progress-info-label">Overall Progress</span>
                        <span class="progress-info-value">45%</span>
                    </div>
                    <div class="progress-bar-container">
                        <div class="progress-bar-chunk chunk-completed" style="width: 45%;"></div>
                        <div class="progress-bar-chunk chunk-in-progress" style="width: 20%;"></div>
                    </div>
                </div>

                <div class="levels-grid">
                    <div class="level-box level-beginner">
                        <span class="level-name">Beginner</span>
                        <span class="level-status">Completed</span>
                        <div class="level-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="#10B981" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"/></svg>
                        </div>
                    </div>
                    <div class="level-box level-intermediate">
                        <span class="level-name">Intermediate</span>
                        <span class="level-status">In Progress</span>
                        <span class="level-progress-val">65%</span>
                    </div>
                    <div class="level-box level-advanced">
                        <span class="level-name">Advanced</span>
                        <span class="level-status">Locked</span>
                        <div class="level-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="#94A3B8" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="18" height="11" x="3" y="11" rx="2" ry="2"/><path d="M7 11V7a5 5 0 0 1 10 0v4"/></svg>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- â”€â”€ Right Column: Recent Tests & Badge â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
    <div class="sidebar-section">
        <h2 class="section-title">Recent Tests</h2>
        
        <div class="recent-tests-container">
            <!-- Test 1 -->
            <div class="test-card">
                <div class="test-card-top">
                    <span class="test-name">SQL Fundamentals</span>
                    <span class="test-badge badge-passed">Passed</span>
                </div>
                <span class="test-level-tag">Beginner</span>
                <div class="test-detail-row">
                    <span class="test-detail-label">Score:</span>
                    <span class="test-detail-value score-high">95%</span>
                </div>
                <div class="test-detail-row">
                    <span class="test-detail-label">1/15/2024</span>
                </div>
            </div>

            <!-- Test 2 -->
            <div class="test-card">
                <div class="test-card-top">
                    <span class="test-name">SQL Fundamentals</span>
                    <span class="test-badge badge-failed">Failed</span>
                </div>
                <span class="test-level-tag">Beginner</span>
                <div class="test-detail-row">
                    <span class="test-detail-label">Score:</span>
                    <span class="test-detail-value score-low">88%</span>
                </div>
                <div class="test-detail-row">
                    <span class="test-detail-label">1/14/2024</span>
                </div>
            </div>

            <!-- Test 3 -->
            <div class="test-card">
                <div class="test-card-top">
                    <span class="test-name">Database Design</span>
                    <span class="test-badge badge-passed">Passed</span>
                </div>
                <span class="test-level-tag">Beginner</span>
                <div class="test-detail-row">
                    <span class="test-detail-label">Score:</span>
                    <span class="test-detail-value score-high">92%</span>
                </div>
                <div class="test-detail-row">
                    <span class="test-detail-label">1/10/2024</span>
                </div>
            </div>

            <!-- Mastery Promo -->
            <div class="achievement-promo">
                <div class="promo-badge-img">
                    <img src="https://images.unsplash.com/photo-1523275335684-37898b6baf30?q=80&w=200&auto=format&fit=crop" alt="Mastery Badge" />
                </div>
                <h3 class="promo-title">Keep Going! ðŸš€</h3>
                <p class="promo-desc">You're making great progress. Complete 3 more tests to unlock a special badge!</p>
            </div>
        </div>
    </div>
</div>
