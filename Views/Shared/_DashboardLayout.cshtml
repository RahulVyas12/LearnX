<!DOCTYPE html>
@{
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
}
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LearnX</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="dashboard-body">

    <!-- ═══════════════════════════════════════════════════════════════
         LEFT SIDEBAR COMPONENT
    ═══════════════════════════════════════════════════════════════ -->
    
    <!-- Sidebar Overlay -->
    <div class="sidebar-overlay" id="sidebar-overlay" onclick="toggleSidebar()"></div>

    <aside class="sidebar" id="sidebar">

        <!-- Logo -->
        <div class="sidebar-logo">
            <div class="logo-icon">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="white" width="22" height="22">
                    <path d="M12 3L1 9l11 6 9-4.91V17h2V9L12 3zM5 13.18v4L12 21l7-3.82v-4L12 17l-7-3.82z"/>
                </svg>
            </div>
            <span class="logo-text">LearnX</span>
        </div>

        <!-- Navigation -->
        <nav class="sidebar-nav">

            <!-- Section: Dashboard -->
            <div class="nav-section">
                <span class="nav-section-title">Dashboard</span>
                <ul class="nav-list">
                    <li class="nav-item @(currentAction == "Dashboard" || currentAction == "Index" ? "active" : "")" id="nav-overview">
                        <a asp-controller="screens" asp-action="Dashboard" class="nav-link">
                            <span class="nav-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
                                    <polyline points="9 22 9 12 15 12 15 22"/>
                                </svg>
                            </span>
                            <span class="nav-label">Overview</span>
                        </a>
                    </li>
                    <li class="nav-item @(currentAction == "ProgressReport" ? "active" : "")" id="nav-progress">
                        <a asp-controller="screens" asp-action="ProgressReport" class="nav-link">
                            <span class="nav-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <line x1="18" y1="20" x2="18" y2="10"/>
                                    <line x1="12" y1="20" x2="12" y2="4"/>
                                    <line x1="6" y1="20" x2="6" y2="14"/>
                                </svg>
                            </span>
                            <span class="nav-label">Progress Report</span>
                        </a>
                    </li>
                </ul>
            </div>

            <!-- Section: Learning & Education (collapsible) -->
            <div class="nav-section">
                <button class="nav-section-title collapsible" id="toggle-learning" onclick="toggleSection('learning-items', 'toggle-learning')">
                    Learning &amp; Education
                    <span class="collapse-arrow">&#8964;</span>
                </button>
                <ul class="nav-list" id="learning-items">
                    <li class="nav-item" id="nav-learning-center">
                        <a asp-controller="screens" asp-action="Dashboard" class="nav-link">
                            <span class="nav-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M22 10v6M2 10l10-5 10 5-10 5z"/>
                                    <path d="M6 12v5c3 3 9 3 12 0v-5"/>
                                </svg>
                            </span>
                            <span class="nav-label">Learning Center</span>
                        </a>
                    </li>
                    <li class="nav-item" id="nav-my-learning">
                        <a asp-controller="screens" asp-action="Dashboard" class="nav-link">
                            <span class="nav-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/>
                                    <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"/>
                                </svg>
                            </span>
                            <span class="nav-label">My Learning</span>
                        </a>
                    </li>
                </ul>
            </div>

            <!-- Section: Assessment (collapsible) -->
            <div class="nav-section">
                <button class="nav-section-title collapsible" id="toggle-assessment" onclick="toggleSection('assessment-items', 'toggle-assessment')">
                    Assessment
                    <span class="collapse-arrow">&#8964;</span>
                </button>
                <ul class="nav-list" id="assessment-items">
                    <li class="nav-item" id="nav-practice">
                        <a asp-controller="screens" asp-action="Dashboard" class="nav-link">
                            <span class="nav-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M9 11l3 3L22 4"/>
                                    <path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"/>
                                </svg>
                            </span>
                            <span class="nav-label">Practice Set</span>
                        </a>
                    </li>
                    <li class="nav-item" id="nav-test-history">
                        <a asp-controller="screens" asp-action="Dashboard" class="nav-link">
                            <span class="nav-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
                                    <polyline points="14 2 14 8 20 8"/>
                                    <line x1="16" y1="13" x2="8" y2="13"/>
                                    <line x1="16" y1="17" x2="8" y2="17"/>
                                    <polyline points="10 9 9 9 8 9"/>
                                </svg>
                            </span>
                            <span class="nav-label">Test History</span>
                        </a>
                    </li>
                </ul>
            </div>

            <!-- Section: General -->
            <div class="nav-section">
                <span class="nav-section-title">General</span>
                <ul class="nav-list">
                    <li class="nav-item" id="nav-announcement">
                        <a asp-controller="screens" asp-action="Dashboard" class="nav-link">
                            <span class="nav-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"/>
                                    <path d="M13.73 21a2 2 0 0 1-3.46 0"/>
                                </svg>
                            </span>
                            <span class="nav-label">Announcement</span>
                        </a>
                    </li>
                    <li class="nav-item" id="nav-settings">
                        <a asp-controller="screens" asp-action="Dashboard" class="nav-link">
                            <span class="nav-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <circle cx="12" cy="12" r="3"/>
                                    <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1-2.83 2.83l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-4 0v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83-2.83l.06-.06A1.65 1.65 0 0 0 4.68 15a1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1 0-4h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 2.83-2.83l.06.06A1.65 1.65 0 0 0 9 4.68a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 4 0v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 2.83l-.06.06A1.65 1.65 0 0 0 19.4 9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 0 4h-.09a1.65 1.65 0 0 0-1.51 1z"/>
                                </svg>
                            </span>
                            <span class="nav-label">Settings</span>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Quick Stats -->
        <div class="quick-stats">
            <span class="quick-stats-title">Quick Stats</span>
            <div class="stat-row">
                <span class="stat-label">Active Modules</span>
                <span class="stat-value">7</span>
            </div>
            <div class="stat-row">
                <span class="stat-label">Last Login</span>
                <strong class="stat-value">Today</strong>
            </div>
        </div>
    </aside>

    <!-- ═══════════════════════════════════════════════════════════════
         MAIN CONTENT AREA
    ═══════════════════════════════════════════════════════════════ -->
    <div class="dashboard-main">

        <!-- ═══════════════════════════════════════════════════════
             TOP HEADER COMPONENT
        ═══════════════════════════════════════════════════════ -->
        <header class="top-header" id="top-header">

            <!-- Header Left / Mobile Toggle -->
            <div class="header-left">
                <!-- Mobile Sidebar Toggle -->
                <button class="mobile-toggle-btn" id="mobile-toggle-btn" onclick="toggleSidebar()" aria-label="Toggle Sidebar">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" width="24" height="24">
                        <line x1="3" y1="12" x2="21" y2="12"></line>
                        <line x1="3" y1="6" x2="21" y2="6"></line>
                        <line x1="3" y1="18" x2="21" y2="18"></line>
                    </svg>
                </button>

                <!-- Search Bar -->
                <div class="search-bar-wrapper">
                <span class="search-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" width="16" height="16">
                        <circle cx="11" cy="11" r="8"/>
                        <line x1="21" y1="21" x2="16.65" y2="16.65"/>
                    </svg>
                </span>
                <input type="text" id="dashboard-search" class="search-input" placeholder="Search modules, Students..." />
                </div>
            </div>

            <!-- Right Side Actions -->
            <div class="header-actions">

                <!-- Online Count Badge -->
                <div class="online-badge" id="online-count-badge">
                    <span class="online-dot"></span>
                    <span class="online-count">17 online</span>
                </div>

                <!-- Notification Bell -->
                <button class="notif-btn" id="notif-btn" title="Notifications" aria-label="Notifications">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" width="20" height="20">
                        <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"/>
                        <path d="M13.73 21a2 2 0 0 1-3.46 0"/>
                    </svg>
                    <span class="notif-dot"></span>
                </button>

                <!-- User Profile -->
                <div class="user-profile" id="user-profile" onclick="toggleProfileMenu()">
                    <div class="user-info">
                        <span class="welcome-text">Welcome Back,</span>
                        <span class="user-name">Rahul</span>
                    </div>
                    <div class="user-avatar" id="user-avatar">R</div>

                    <!-- Profile Dropdown -->
                    <div class="profile-dropdown" id="profile-dropdown">
                        <a asp-controller="screens" asp-action="Profile" class="dropdown-option" id="profile-link">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="15" height="15"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>
                            My Profile
                        </a>
                        <a asp-controller="screens" asp-action="Settings" class="dropdown-option" id="account-settings-link">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="15" height="15"><circle cx="12" cy="12" r="3"/><path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1-2.83 2.83l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-4 0v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83-2.83l.06-.06A1.65 1.65 0 0 0 4.68 15a1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1 0-4h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 2.83-2.83l.06.06A1.65 1.65 0 0 0 9 4.68a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 4 0v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 2.83l-.06.06A1.65 1.65 0 0 0 19.4 9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 0 4h-.09a1.65 1.65 0 0 0-1.51 1z"/></svg>
                            Account Settings
                        </a>
                        <div class="dropdown-divider"></div>
                        <a asp-controller="screens" asp-action="LoginPage" class="dropdown-option logout" id="logout-link">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="15" height="15"><path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"/><polyline points="16 17 21 12 16 7"/><line x1="21" y1="12" x2="9" y2="12"/></svg>
                            Logout
                        </a>
                    </div>
                </div>
            </div>
        </header>

        <!-- Page Content -->
        <main class="dashboard-content">
            @RenderBody()
        </main>
    </div>

    <script>
        // ── Mobile Sidebar Toggle ───────────────────────────────────
        function toggleSidebar() {
            document.getElementById('sidebar').classList.toggle('open');
            document.getElementById('sidebar-overlay').classList.toggle('show');
        }

        // ── Sidebar collapse sections ──────────────────────────────
        function toggleSection(listId, btnId) {
            const list = document.getElementById(listId);
            const btn  = document.getElementById(btnId);
            const arrow = btn.querySelector('.collapse-arrow');
            const isOpen = list.style.display !== 'none';
            list.style.display = isOpen ? 'none' : 'block';
            arrow.style.transform = isOpen ? 'rotate(-90deg)' : 'rotate(0deg)';
        }

        // ── Profile dropdown ───────────────────────────────────────
        function toggleProfileMenu() {
            const dropdown = document.getElementById('profile-dropdown');
            dropdown.classList.toggle('open');
        }
        document.addEventListener('click', function (e) {
            const profile = document.getElementById('user-profile');
            const dropdown = document.getElementById('profile-dropdown');
            if (!profile.contains(e.target)) {
                dropdown.classList.remove('open');
            }
        });

        // ── Active nav highlight ───────────────────────────────────
        document.querySelectorAll('.nav-item').forEach(item => {
            item.addEventListener('click', function () {
                document.querySelectorAll('.nav-item').forEach(i => i.classList.remove('active'));
                this.classList.add('active');
            });
        });
    </script>
</body>
</html>
